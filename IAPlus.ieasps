compute splitvar = concat(rtrim(var_label), " (", rtrim(item), ") Key (",string(key,f2.0), ") Rev (", rtrim(Reverse), ")" ).
autorecode splitvar / into ItemID.

save translate
  / outfile= !quote(!concat(!unquote(!outdir),"\",!unquote(!outfile),!filetag,"_ItemStats4Graphs.csv"))
  / replace  / type = csv / fieldnames / encoding = 'LOCALE'.
save outfile = !quote(!concat(!unquote(!outdir),"\",!unquote(!outfile),!filetag,"_ItemStats4Graphs.sav")).
execute.
