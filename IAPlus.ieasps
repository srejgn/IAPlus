!ifend

!if (!upcase(!DoIRT) = Y !and (!scale !ne !null)) !then
*erase file = !quote(!concat(!unquote(!outdir),"\",!unquote(!outfile),!filetag,"_GroupMeans.sav")).
!ifend

!if (!upcase(!DoDIF) = Y !and !bv !ne !null) !then
