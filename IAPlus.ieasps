!if (!upcase(!DoTables) = Y !and !upcase(!DoHTML) = Y) !then
omsend tag = ['ctables2'].
!ifend

!doend

!if (!upcase(!clean) = Y) !then
erase file = !quote(!concat(!unquote(!outdir),"\",!unquote(!outfile),"_Val_Labels.sav")).
erase file = !quote(!concat(!unquote(!outdir),"\",!unquote(!outfile),"_Var_Labels.sav")).
erase file = !quote(!concat(!unquote(!outdir),"\",!unquote(!outfile),"_Desc.sav")).

!if (!upcase(!DoIRT) = Y !and !upcase(!CtrDiff) = Y !and (!scale !ne !null)) !then
erase file = !quote(!concat(!unquote(!outdir),"\",!unquote(!outfile),"_IRTStatsShift.sav")).
