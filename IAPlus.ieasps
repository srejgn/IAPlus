*******************************************.
* macro to get item information           *.
*******************************************.
define !getifile ( idir         = !charend('/') /
                   ifile        = !charend('/') /
                   sheet        = !charend('/') !default("") /
                   odir         = !charend('/') /
                   selcrit      = !charend('/') !default("") /
                   clean        = !charend('/') !default(Y)  /
                   viewcod      = !charend('/') !default(N)  ).

preserve.
* If viewcode is selected.
!if (!upcase(!viewcod)=Y) !then
set mprint=on  printback=on.
!else
set mprint=off printback=off.
!ifend

* when specified, read file with item information.
get data
 / type = xlsx
 / file = !quote(!concat(!unquote(!idir),"\",!unquote(!ifile),".xlsx"))
  !if (!unquote(!sheet) !ne !null) !then / sheet = name !quote(!unquote(!sheet)) !ifend
 / datatypemin percentage = 100.

select if (items <> "").

* Implement selection criteria if provided.
!if (!selcrit !ne !null) !then
select if (!selcrit).
!ifend

alter type keys reverse maxscrs exclude (a1).
compute iseq = $casenum.
format iseq (f3.0).
recode keys    ("" = "X") (else = copy).
recode reverse ("" = "N") (else = copy).
recode maxscrs ("" = "1") (else = copy).
save translate
  / outfile= !quote(!concat(!unquote(!odir),"\",!unquote(!ifile),"_",!unquote(!sheet),"_ItemList.csv"))
  / replace  / type = csv
  / keep = Items Keys Reverse MaxScrs Exclude
  / fieldnames / encoding = 'LOCALE'.
execute.
select if (upcase(exclude) <> "Y" and exclude <> "1").
compute k = 1.
match files
 / file = * / first = fitem / last = litem
 / by k.
string front back (a15).
if (fitem = 1) front = concat('define !','ix () ').
if (fitem <>1) front = '              '.
if (litem <>1) back  = '              '.
if (litem = 1) back  = concat('   !','enddefine.').
write outfile = !quote(!concat(!unquote(!odir),"\ix.tmp"))
 / 1 front items back.
if (fitem = 1) front = concat('define !','kx () ').
write outfile = !quote(!concat(!unquote(!odir),"\kx.tmp"))
 / 1 front keys back.
if (fitem = 1) front = concat('define !','mx () ').
write outfile = !quote(!concat(!unquote(!odir),"\mx.tmp"))
 / 1 front maxscrs back.
if (fitem = 1) front = concat('define !','rx () ').
write outfile = !quote(!concat(!unquote(!odir),"\rx.tmp"))
 / 1 front reverse back.
execute.
!onexpand.
include file = !quote(!concat(!unquote(!odir),"\ix.tmp")).
include file = !quote(!concat(!unquote(!odir),"\kx.tmp")).
include file = !quote(!concat(!unquote(!odir),"\mx.tmp")).
include file = !quote(!concat(!unquote(!odir),"\rx.tmp")).
execute.

!if (!upcase(!clean) = Y) !then
erase file = !quote(!concat(!unquote(!odir),"\ix.tmp")).
erase file = !quote(!concat(!unquote(!odir),"\kx.tmp")).
erase file = !quote(!concat(!unquote(!odir),"\mx.tmp")).
erase file = !quote(!concat(!unquote(!odir),"\rx.tmp")).
!ifend
restore.
!enddefine.